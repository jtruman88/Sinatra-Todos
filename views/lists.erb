<ul id="lists">
  <% sort_lists(@lists) do |list, ind| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= ind %>">
        <h2><%= list[:name] %></h2>
        <p><%= completed_ratio(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>